#include<bits/stdc++.h>
#define pf printf
#define sf scanf
#define z long long int
using namespace std ;
int main()
{
	z t,n;
	sf("%lld",&t);
	while(t--)
	{
		sf("%lld",&n);
		sf("n is %lld",&n);

		pf("%lld\n",    (z)(sqrt(1+8*n) - 1  )/2    )       ;
		
		
	}
	
	
	
	return 0;
}
